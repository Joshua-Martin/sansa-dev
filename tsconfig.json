{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "composite": true,
    "baseUrl": ".",
  },
  "references": [
    { "path": "./packages/tb-shared" },
    { "path": "./packages/tb-frontend" },
    { "path": "./packages/tb-nest" },
    { "path": "./packages/s-shared" },
    { "path": "./packages/s-frontend" },
    { "path": "./packages/s-nest" },
    { "path": "./packages/sansa-x" }
  ],
  "include": [],
  "exclude": ["node_modules", "dist", "build", "coverage"]
}
