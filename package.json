{
  "name": "sansa-dev",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "description": "Sansa AI Router monorepo with dual backend/frontend architecture",
  "author": "Sansa AI Team",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "concurrently --names \"S-UI,S-API,TB-UI,TB-API\" --prefix-colors \"cyan,magenta,blue,green\" --kill-others-on-fail \"pnpm run dev:s-frontend\" \"pnpm run dev:s-backend\" \"pnpm run dev:tb-frontend\" \"pnpm run dev:tb-backend\"",
    "dev:s": "concurrently --names \"S-UI,S-API\" --prefix-colors \"cyan,magenta\" --kill-others-on-fail \"pnpm run dev:s-frontend\" \"pnpm run dev:s-backend\"",
    "dev:tb": "concurrently --names \"TB-UI,TB-API\" --prefix-colors \"blue,green\" --kill-others-on-fail \"pnpm run dev:tb-frontend\" \"pnpm run dev:tb-backend\"",
    "dev:s-frontend": "pnpm --filter @sansa-dev/s-frontend dev",
    "dev:s-backend": "pnpm --filter @sansa-dev/s-nest start:dev",
    "dev:tb-frontend": "pnpm --filter @sansa-dev/tb-frontend dev",
    "dev:tb-backend": "pnpm --filter @sansa-dev/tb-nest start:dev",
    "dev:clean": "./scripts/dev-cleanup.sh",
    "dev:restart": "./scripts/dev-cleanup.sh && pnpm dev",
    "build": "pnpm build:shared && pnpm build:frontends && pnpm build:backends",
    "build:shared": "pnpm --filter @sansa-dev/tb-shared build && pnpm --filter @sansa-dev/s-shared build",
    "build:frontends": "pnpm --filter @sansa-dev/tb-frontend build && pnpm --filter @sansa-dev/s-frontend build",
    "build:backends": "pnpm --filter @sansa-dev/tb-nest build && pnpm --filter @sansa-dev/s-nest build",
    "build:tb": "pnpm --filter @sansa-dev/tb-shared build && pnpm --filter @sansa-dev/tb-frontend build && pnpm --filter @sansa-dev/tb-nest build",
    "build:s": "pnpm --filter @sansa-dev/s-shared build && pnpm --filter @sansa-dev/s-frontend build && pnpm --filter @sansa-dev/s-nest build",
    "build:core": "./build-core-container.sh",
    "build:core-container": "./build-core-container.sh",
    "start": "concurrently --names \"S-UI,S-API,TB-UI,TB-API\" --prefix-colors \"cyan,magenta,blue,green\" \"pnpm --filter @sansa-dev/s-frontend preview\" \"pnpm --filter @sansa-dev/s-nest start:prod\" \"pnpm --filter @sansa-dev/tb-frontend preview\" \"pnpm --filter @sansa-dev/tb-nest start:prod\"",
    "start:s": "concurrently --names \"S-UI,S-API\" --prefix-colors \"cyan,magenta\" \"pnpm --filter @sansa-dev/s-frontend preview\" \"pnpm --filter @sansa-dev/s-nest start:prod\"",
    "start:tb": "concurrently --names \"TB-UI,TB-API\" --prefix-colors \"blue,green\" \"pnpm --filter @sansa-dev/tb-frontend preview\" \"pnpm --filter @sansa-dev/tb-nest start:prod\"",
    "test": "pnpm --parallel --filter \"@sansa-dev/*\" test",
    "test:s": "pnpm --filter @sansa-dev/s-nest test && pnpm --filter @sansa-dev/s-frontend test",
    "test:tb": "pnpm --filter @sansa-dev/tb-nest test && pnpm --filter @sansa-dev/tb-frontend test",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "type-check": "pnpm --parallel --filter \"@sansa-dev/*\" type-check",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "pnpm --parallel --filter \"@sansa-dev/*\" exec rm -rf dist",
    "clean:all": "pnpm clean && pnpm --parallel --filter \"*\" exec rm -rf node_modules",
    "debug:container": "./debug-container.sh"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^8.2.2",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-import-resolver-typescript": "^4.4.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.2",
    "eslint-plugin-tsdoc": "^0.4.0",
    "eslint-plugin-unicorn": "^59.0.1",
    "jsdom": "^26.1.0",
    "prettier": "^3.5.3",
    "typescript": "^5.2.2",
    "vite": "^5.4.19",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.1.4"
  },
  "dependencies": {
    "firebase-tools": "^14.17.0"
  }
}
