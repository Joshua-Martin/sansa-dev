// Sansa - Smart AI API Router Development Container
// Supports dual backend architecture (TB & S) with isolated PostgreSQL databases
{
  "name": "Sansa AI Router Dev",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",

  // Configure tool-specific properties.
  "customizations": {
    // Configure properties specific to VS Code.
    "vscode": {
      // Add the IDs of extensions you want installed when the container is created.
      "extensions": [
        "cipchk.cssrem",
        "huizhou.githd",
        "ms-vscode.vscode-docker",
        "ms-azuretools.vscode-docker",
        "redhat.vscode-yaml"
      ]
    }
  },
  // Port forwarding for dual backend/frontend architecture:
  // 3000: S-Nest Backend API, 3001: TB-Nest Backend API
  // 4200: S-Frontend Dev Server, 4201: TB-Frontend Dev Server
  // 5432: TB PostgreSQL, 5433: S PostgreSQL
  // 6379: Redis, 9100/9101: MinIO, 5100: Registry, 8200: cAdvisor
  "forwardPorts": [3000, 3001, 4200, 4201, 5432, 5433, 6379, 9100, 9101, 5100, 8200],
  "postAttachCommand": "/bin/bash .devcontainer/setup.sh",
  "hostRequirements": {
    "cpus": 4,
    "memory": "8gb"
  },

  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  // This can be used to network with other containers or with the host.

  // Use 'postCreateCommand' to run commands after the container is created.
  // Removed to prevent conflicting npm operations with postAttachCommand
  "remoteUser": "root"
}
